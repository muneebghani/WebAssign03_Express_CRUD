extends ../layout

block content
    h1 Add New Instrument
    form(action="/products/add",method="post" enctype="multipart/form-data")
        .form-group
            label(for="image") Image
            input#image(type="file", class="form-control", name="image" required)
        .form-group
            label(for="instrument") Instrument Name
            input#instrument(type="text", class="form-control", name="instrument" required)
        .form-group
            label(for="price") Instrument Price(Rs)
            input#price(type="number", class="form-control", name="price" required)
        input(type="submit", class="btn btn-info")
    