extends ../layout

block content
    h1 Edit Instrument
    form(action="/products/edit/"+product._id,method="post" enctype="multipart/form-data")
        .form-group
            label(for="image") Image
            input#image(type="file", class="form-control", name="image", value=product.image)
        .form-group
            label(for="instrument") Instrument Name
            input#instrument(type="text", class="form-control", name="instrument", value=product.instrument)
        .form-group
            label(for="price") Instrument Price(Rs)
            input#price(type="number", class="form-control", name="price", value=product.price)
        input(type="submit", class="btn btn-info")
    