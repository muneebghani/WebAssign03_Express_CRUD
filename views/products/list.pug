extends ../layout

block content
    .row
        .col-sm-8
            h1 Admin Panel
            h1=title
        .col-sm-4
            a(href="/products/add", class="btn btn-success float-right") Add New Instrument
    table.table
        thead
            tr
                th Image
                th Instrument
                th Price(Rs)
                th Actions
        tbody
            each product in products
                tr
                    td=product.image
                    td=product.instrument
                    td=product.price
                    td
                        a(href="/products/delete/"+product._id, class="btn btn-danger") Delete
                        a(href="/products/edit/"+product._id, class="btn btn-warning") Edit